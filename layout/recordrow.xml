<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="16-04-2022"
            android:textAlignment="center"
            android:textColor="#737272"
            android:textSize="24sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="71dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="crop :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cropv"
                android:layout_width="115dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="98dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="temparature :"
                app:layout_constraintStart_toEndOf="@+id/cropv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tempv"
                android:layout_width="106dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="71dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="humidity :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/humidv"
                android:layout_width="115dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/cropv" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="98dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="soil moisture :"
                app:layout_constraintStart_toEndOf="@+id/humidv"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/smv"
                android:layout_width="106dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/tempv" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="86dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="soil texture :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/stv"
                android:layout_width="101dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/humidv" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="97dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="crop age:"
                app:layout_constraintStart_toEndOf="@+id/stv"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/ca1"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/smv" />

            <TextView
                android:id="@+id/cc"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="cropcount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/cc1"
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintStart_toEndOf="@+id/cc"
                app:layout_constraintTop_toBottomOf="@+id/stv" />

            <TextView
                android:id="@+id/ca"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="prediction"
                app:layout_constraintStart_toEndOf="@+id/cc1"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/pv"
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="----"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</LinearLayout>
